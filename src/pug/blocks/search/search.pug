mixin search(main,mobile)
    if main
        .search.search_main
            form(action="/")
                button(type="submit" value="")
                    svg(class="search__svg")
                        use(xlink:href= img + "sprite.svg#search_svg")
                input(type="text" value="" placeholder="Поиск по каталогу") 
    else if mobile 
        .search.search_mobile 
            svg(class="search__svg")
                use(xlink:href= img + "sprite.svg#search_svg")
                
